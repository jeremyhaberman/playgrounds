<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
    	android:id="@+id/add_playground_buttons"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true" >
	   	<Button
			android:id="@+id/add_current_location_button"
			android:icon="@android:drawable/ic_menu_add"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/add_current_location_button_label" />
		<Button
			android:id="@+id/add_by_address_button"
			android:icon="@android:drawable/ic_menu_add"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/add_by_address_button_label" />
	</LinearLayout>
</RelativeLayout>