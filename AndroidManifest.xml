<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.jeremyhaberman.swingset"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />

    <application android:icon="@drawable/swingset" android:label="@string/app_name">
        <activity android:name=".Swingset"
                  android:label="@string/app_name"
                  android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="AddPlayground"
        		  android:label="@string/add_playground_title" />
        <activity android:name="AddCurrentLocation"
        		  android:label="@string/add_current_location_title" />
		<uses-library android:name="com.google.android.maps" />
    </application>
</manifest>